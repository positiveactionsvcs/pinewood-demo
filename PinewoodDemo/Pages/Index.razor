@page "/"
@inject ApiService Api

<PageTitle>Customers</PageTitle>

<h1>Customers</h1>

@if (_customers == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (CustomerDto customer in _customers)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a href="./customers/@customer.CustomerId/edit">Edit</a>
                    <a href="./customers/@customer.CustomerId/delete">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <p>
        <a href="./customers/add">Add New...</a>
    </p>
}